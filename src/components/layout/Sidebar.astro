---

<aside class="hidden lg:flex fixed left-0 top-0 h-screen w-20 bg-transparent z-40 flex-col items-center py-4">
  <div class="mb-8">
    <div class="w-12 h-12 rounded-2xl bg-[var(--md-sys-color-primary-container)] flex items-center justify-center">
      <span class="text-xl">NA</span>
    </div>
  </div>

  <nav class="flex-1 flex flex-col items-center gap-3 w-full px-2">
    {navItems.map((item) => (
      <a
        href={item.href}
        aria-label={item.name}
        class="nav-item w-14 h-14 rounded-2xl flex items-center justify-center text-[var(--md-sys-color-on-surface-variant)] hover:bg-[var(--md-sys-color-secondary-container)] hover:text-[var(--md-sys-color-on-secondary-container)] transition-all duration-300 group relative"
        data-tooltip={item.name}
      >
       <span set:html={item.icon} class="block h-6 w-6" />

        <!-- Tooltip -->
        <div class="tooltip absolute left-full ml-2 px-3 py-2 bg-[var(--md-sys-color-inverse-surface)] text-[var(--md-sys-color-inverse-on-surface)] rounded-xl text-sm font-medium whitespace-nowrap opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 pointer-events-none">
          {item.name}
        </div>
      </a>
    ))}
  </nav>

  <div class="mt-auto">
    <ThemeToggle class="border-1 mb-1" />
  </div>
</aside>

<style>
  .nav-item.active {
    background-color: var(--md-sys-color-secondary-container);
    color: var(--md-sys-color-on-secondary-container);
  }

  .tooltip::before {
    content: '';
    position: absolute;
    right: 100%;
    top: 50%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-right-color: var(--md-sys-color-inverse-surface);
  }
</style>
