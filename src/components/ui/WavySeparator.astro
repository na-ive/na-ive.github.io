---
const { class: className } = Astro.props;
const uniqueId = `wavy-line-${Math.random().toString(36).slice(2, 9)}`;
---
<svg width="100%" height="20" aria-hidden="true" class:list={[className]}>
  <defs>
    <pattern id={uniqueId} x="0" y="0" width="40" height="20" patternUnits="userSpaceOnUse">
      <path d="M 0 10 Q 10 0, 20 10 T 40 10" stroke="currentColor" stroke-width="2" fill="none" />
    </pattern>
  </defs>
  <rect x="0" y="0" width="100%" height="100%" fill={`url(#${uniqueId})`}></rect>
</svg>

